{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "packageRules": [
    {
      "description": "Group Minecraft-related updates together",
      "matchDatasources": ["gradle-version"],
      "groupName": "Minecraft & Fabric",
      "automerge": false,
      "matchPackageNames": [
        "/^com\\.mojang:minecraft$/",
        "/^net\\.fabricmc:yarn$/",
        "/^net\\.fabricmc:fabric-loader$/",
        "/^net\\.fabricmc\\.fabric-api:fabric-api$/"
      ]
    },
    {
      "description": "Group Kotlin updates together",
      "groupName": "Kotlin",
      "matchPackageNames": ["/kotlin/"]
    },
    {
      "description": "Group GitHub Actions updates",
      "matchManagers": ["github-actions"],
      "groupName": "GitHub Actions",
      "automerge": true
    },
    {
      "description": "Group Gradle plugin updates",
      "matchManagers": ["gradle"],
      "matchDepTypes": ["plugin"],
      "groupName": "Gradle plugins"
    },
    {
      "description": "Separate major updates for review",
      "matchUpdateTypes": ["major"],
      "automerge": false
    }
  ],
  "prHourlyLimit": 3,
  "prConcurrentLimit": 5
}